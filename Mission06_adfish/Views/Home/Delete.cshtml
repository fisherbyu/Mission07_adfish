@{
    ViewData["Title"] = "Delete Movie";
}
@model Mission06_adfish.Models.Movie


<h2>Confirm Delete: </h2>
<h4>Are you sure you want to delete @Model.Title from the Database?</h4>

<form method="post" asp-action="Delete">
    <a class="btn btn-primary" asp-controller="Home" asp-action="MyMovies">Cancel</a>
    <button class="btn" type="submit" >Delete</button>
    <input type="hidden" asp-for="MovieId">
</form>
